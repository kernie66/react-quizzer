{
  "compilerOptions": {
    "checkJs": false,
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleResolution": "NodeNext",
    "target": "es2020",
    "module": "NodeNext"
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules", "build", ".vscode", "coverage", ".npm", ".yarn"],
  "typeAcquisition": {
    "enable": true,
    "include": ["node"]
  }
}
